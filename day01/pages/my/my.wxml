<!-- pages/my/my.wxml -->
<import src="..//templates/templates.wxml"></import>
<view>
    <view class="content">
        <view class="title">这里是地图展示</view>
        <view class="map" hover-class="none" hover-stop-propagation="false">
            <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>
        </view>
        <view class="list">
            <block wx:for="{{message}}" wx:key="id">
                <template is="personCourseItemTmp" data="{{...item}}"></template>
            </block>
        </view>
    </view>
</view>