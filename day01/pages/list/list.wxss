/* pages/list.wxss */
@import "../templates/templates.wxss";

page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar{
  flex: none;
  display: flex;
  background: #fff;
}

.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}







.meituan-container{
  display: flex;
  align-content: center;
  /* 从左往右行排列 */
  flex-direction: column;
  justify-content: center;
}

.meituan-container .meituan-hongbao{
  display: flex;
  justify-content: center;
}

.meituan-container .pic{
  width: 638rpx;
  height: 200rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
  /* border: 1px solid red; */
}


